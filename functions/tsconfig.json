{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "ES2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": "src",
    "incremental": true,
    "typeRoots": [
      "./functions/node_modules/@types" // ← functions内のnode_modules/@typesを指定する
    ],  
    "types": [
      "@types/jest"
    ]

  },
  "compileOnSave": true,
  "paths": {
      "@/*": ["src/*"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules","dist","src/test"
  ]
}
